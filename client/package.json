{
  "name": "remus-client",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:app": "concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "build": "vite build",
    "build:app": "npm run build && electron-packager . Remus --platform=win32 --arch=x64 --out=release --overwrite --prune=true",
    "build:exe": "npm run build && electron-builder --win portable --x64",
    "preview": "vite preview",
    "start": "electron ."
  },
  "dependencies": {
    "mediasoup-client": "^3.18.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.2.1",
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8",
    "electron-packager": "^17.1.2",
    "png-to-ico": "^3.0.1",
    "vite": "^6.0.5",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.remus.client",
    "productName": "Remus Client",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "asar": true,
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "win": {
      "target": "portable",
      "signAndEditExecutable": false,
      "icon": "build/icon.ico"
    }
  }
}
